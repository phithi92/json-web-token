{
    "name": "phithi92/json-web-token",
    "description": "Handles the generation of JSON Web Tokens (JWT), including both JWS (JSON Web Signature) and JWE (JSON Web Encryption). Provides methods for creating and validating tokens.",
    "type": "library",
    "license": "MIT",
    "version": "0.2.8",
    "authors": [
        {
            "name": "Phillip Thiele",
            "email": "development@phillip-thiele.de"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.2",
        "phpseclib/phpseclib": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpbench/phpbench": "^1.0",
        "nikic/php-parser": "^5.3",
        "phpstan/phpstan": "2.0.x-dev",
        "nunomaduro/phpinsights": "dev-master",
        "shipmonk/dead-code-detector": "^0.9.2",
        "phpstan/phpstan-strict-rules": "2.0.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Phithi92\\JsonWebToken\\": "src/",
            "Tests\\": "tests/"
         }
    },
    "scripts": {
        "test": "phpunit --configuration config/phpunit.xml",

        "analyse": "@php vendor/bin/phpstan analyse --configuration=config/phpstan.neon --memory-limit=1G",
        "style": "phpcs --standard=PSR12 src tests",

        "benchmark": "@php vendor/bin/phpbench --config config/phpbench.json run tests/phpbench/* --report=benchmark",

        "generate-keys": "@php bin/generate-keys.php",
        
        "lefthook": "lefthook run pre-push"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}

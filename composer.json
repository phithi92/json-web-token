{
    "name": "phithi92/json-web-token",
    "description": "Handles the generation of JSON Web Tokens (JWT), including both JWS (JSON Web Signature) and JWE (JSON Web Encryption). Provides methods for creating and validating tokens.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Phillip Thiele",
            "email": "development@phillip-thiele.de"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.2",
        "phpseclib/phpseclib": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpbench/phpbench": "^1.0",
        "nikic/php-parser": "^5.3",
        "phpstan/phpstan": "2.1",
        "nunomaduro/phpinsights": "dev-master",
        "shipmonk/dead-code-detector": "^0.9.2",
        "phpstan/phpstan-strict-rules": "^2.0.0",
        "php-parallel-lint/php-parallel-lint": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Phithi92\\JsonWebToken\\": "src/",
            "Tests\\": "tests/"
         }
    },
    "scripts": {
      "keys": "@php bin/generate-keys.php",

      "lint": "@php vendor/bin/parallel-lint src",
      "cs:check": "@php vendor/bin/php-cs-fixer fix --config=config/php-cs-fixer.php --using-cache=no --dry-run --diff",
      "cs:fix": "@php vendor/bin/php-cs-fixer fix --config=config/php-cs-fixer.php --using-cache=no --diff",
        
      "analyse": "@php vendor/bin/phpstan analyse -c config/phpstan.neon --memory-limit=1G",
      "insights": "@php vendor/bin/phpinsights analyse -c config/phpinsights.php",
      "insights:fix": "@php vendor/bin/phpinsights fix -c config/phpinsights.php --quiet",

      "bench": "@php vendor/bin/phpbench run tests/phpbench --config=config/phpbench.json --report=benchmark",

      "test": "@php -d xdebug.mode=off vendor/bin/phpunit -c config/phpunit.xml --colors=always",
      "test:coverage": "@php -d xdebug.mode=coverage vendor/bin/phpunit -c config/phpunit.xml --coverage-text --colors=always",

      "fix": [
        "@cs:fix",
        "@insights:fix"
      ],
      "qa": [
        "@cs:check",
        "@analyse",
        "@test"
      ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
